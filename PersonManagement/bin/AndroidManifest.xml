<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dc.mobdev.personmanagerdemo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="13"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity 
            android:name="dc.mobdev.personmanagerdemo.AddPersonActivity"
            android:label="@string/labelAddPersonActivity">       
        </activity>
        <activity 
            android:name="dc.mobdev.personmanagerdemo.ListPersonActivity"
            android:label="@string/labelListPersonActivity">       
        </activity>
        
        <activity 
            android:name="dc.mobdev.personmanagerdemo.EditPersonActivity"
            android:label="@string/labelEditPersonActivity">       
        </activity>
        
        <activity 
            android:name="dc.mobdev.personmanagerdemo.PersonDetailActivity"
            android:label="@string/labelPersonDetailActivity"> 
       </activity>
    </application>

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

</manifest>